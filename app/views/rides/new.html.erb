<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 first-top-padding">
      <%= simple_form_for @ride do |f| %>
        <%= f.input :from, label: false, placeholder: "Origem" %>
        <%= f.input :to, label: false, placeholder: "Destino" %>
        <%= f.submit "Buscar", class: "btn btn-success btn-block" %>
      <% end %>
    </div>
  </div>
</div>
